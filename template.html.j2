<div class="container">
  <header>
    <span class="title">Todoist Tasks - Due Today | Overdue</span>
  </header>
  <main>
    <ul class="task-list">
      {% for task in tasks %}
      <li class="task-list">
        <div class="task-content">
          <span class="title title--small">
            <strong>{{ task.content }}</strong>
          </span>
        </div>
        <div class="task-details" > <div class="r-bg-gray-4">
          <span class="description">
            <em>{{task.description}}</em><br>
          </span>
          {% if task.due_date %}
          <span class="label label--small">üìÖ {{task.due_date}}</span>
          {% endif %}
          {% if task.priority %}
          <span class="label label--small">üè¥ {{task.priority}}</span>
          {% endif %}
        </div></div>
      </li>
      {% endfor %}
    </ul>
    <div class="title_bar">
      <img class="image" src="https://www.svgrepo.com/download/306859/todoist.svg">
      <span class="title">Todoist (Unofficial)</span>
      <span class="instance">@KilobyteTheDust</span>
    </div>
  </main>
  <style>
    body {
    }
    header {
      text-align: center;
      margin-bottom: 10px;
    }
    li {
      margin-bottom: 12px;
    }
    .title_bar {
      position: relative;
      bottom: -50px;
      left: 0;
      right: 0;
      text-align: center;
    }
  </style>
</div>